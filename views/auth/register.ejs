<html lang="de">
<head>
    <meta charset="UTF-8">
    <title>Registrierung</title>
    <link rel="stylesheet" href="/stylesheets/global.css">
    <link rel="stylesheet" href="/stylesheets/toast.css">
    <link rel="stylesheet" href="/stylesheets/auth.css">
    <script src="/javascripts/toast.js" defer></script>
    <script src="/javascripts/auth/register.js" defer></script>
    <script src="/javascripts/auth/passwordToggle.js" defer></script>
</head>
<body>
<div class="form-container">
    <form id="registerForm">
        <h1>Registrierung</h1>

        <label for="email">E-Mail:</label>
        <input class="form-input" type="email" id="email" name="email" required>
        <div id="emailError" class="error-message"></div>

        <div class="password-container">
            <label for="password">Passwort:</label>
            <div class="password-input-wrapper">
                <input class="form-input" type="password" id="password" name="password" required>
                <button type="button" class="toggle-btn" id="toggle-btn"
                        aria-label="Passwort sichtbar/unsichtbar">
                    <img src="/icons/eye-open.svg" id="toggle-img" alt="Passwort anzeigen">
                </button>
            </div>
        </div>

        <button type="submit" class="btn-primary" style="width: 100%">Registrieren</button>
    </form>
    <!-- Link zurück zum Login -->
    <p>Zurück zum <a href="/login">Login</a></p>
</div>

<div id="toastContainer"></div>
</body>
</html>